<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.anky.myappportfolio.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/my_apps_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp"
            android:text="@string/my_nanodegree_apps"
            android:textColor="#000000"
            android:textSize="24sp" />

        <Button
            android:id="@+id/popular_movies_bn"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_apps_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:text="@string/popular_movies"
            android:textAllCaps="true"
            android:textSize="14dp" />

        <Button
            android:id="@+id/stock_hawk_bn"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/popular_movies_bn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:text="@string/stock_hawk"
            android:textAllCaps="true"
            android:textSize="14dp" />

        <Button
            android:id="@+id/build_it_bigger_bn"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/stock_hawk_bn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:text="@string/build_it_bigger"
            android:textAllCaps="true"
            android:textSize="14dp" />

        <Button
            android:id="@+id/make_your_app_material_bn"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/build_it_bigger_bn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:text="@string/make_your_app_material"
            android:textAllCaps="true"
            android:textSize="14dp" />

        <Button
            android:id="@+id/go_ubiquitous_bn"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/make_your_app_material_bn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:text="@string/go_ubiquitous"
            android:textAllCaps="true"
            android:textSize="14dp" />

        <Button
            android:id="@+id/capstone_bn"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/go_ubiquitous_bn"
            android:layout_centerHorizontal="true"
            android:text="@string/capstone"
            android:textAllCaps="true"
            android:textSize="14dp" />
    </RelativeLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.anky.myappportfolio.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/my_apps_tv"
            style="@style/PortfolioTextView"
            android:text="@string/my_nanodegree_apps" />

        <Button
            android:id="@+id/popular_movies_bn"
            style="@style/BasicButtonView.Margin"
            android:layout_below="@id/my_apps_tv"
            android:text="@string/popular_movies" />

        <Button
            android:id="@+id/stock_hawk_bn"
            style="@style/BasicButtonView.Margin"
            android:layout_below="@id/popular_movies_bn"
            android:text="@string/stock_hawk" />

        <Button
            android:id="@+id/build_it_bigger_bn"
            style="@style/BasicButtonView.Margin"
            android:layout_below="@id/stock_hawk_bn"
            android:text="@string/build_it_bigger" />

        <Button
            android:id="@+id/make_your_app_material_bn"
            style="@style/BasicButtonView.Margin"
            android:layout_below="@id/build_it_bigger_bn"
            android:text="@string/make_your_app_material" />

        <Button
            android:id="@+id/go_ubiquitous_bn"
            style="@style/BasicButtonView.Margin"
            android:layout_below="@id/make_your_app_material_bn"
            android:text="@string/go_ubiquitous" />

        <Button
            android:id="@+id/capstone_bn"
            style="@style/BasicButtonView"
            android:layout_below="@id/go_ubiquitous_bn"
            android:text="@string/capstone" />
    </RelativeLayout>
</ScrollView>
